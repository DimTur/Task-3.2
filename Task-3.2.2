CREATE TABLE IF NOT EXISTS Genre (
	id SERIAL PRIMARY KEY,
	title VARCHAR(40) UNIQUE NOT NULL
);

CREATE TABLE IF NOT EXISTS Artist (
	id INTEGER PRIMARY KEY REFERENCES Genre(id),
	name VARCHAR (40) UNIQUE NOT NULL
);

CREATE TABLE IF NOT EXISTS Genre_artist (
	id SERIAL PRIMARY KEY,
	genre_id INTEGER NOT NULL REFERENCES Genre(id),
	artist_id INTEGER NOT NULL REFERENCES Artist(id)
);

CREATE TABLE IF NOT EXISTS Album (
	id INTEGER PRIMARY KEY REFERENCES Artist(id),
	title VARCHAR(60) NOT NULL,
	year VARCHAR(4) unique NOT NULL
);

CREATE TABLE IF NOT EXISTS Song (
	id SERIAL PRIMARY KEY,
	album_id INTEGER NOT NULL REFERENCES Album(id),
	name VARCHAR(60) NOT NULL,
	time VARCHAR(5) NOT NULL
);

CREATE TABLE IF NOT EXISTS Album_artist (
	artist_id INTEGER REFERENCES Artist(id),
	album_id INTEGER REFERENCES Album(id),
	CONSTRAINT pk PRIMARY KEY (artist_id, album_id)
);

CREATE TABLE IF NOT EXISTS Collection (
	id SERIAL PRIMARY KEY,	
	title VARCHAR(40) NOT NULL,
	year VARCHAR(4) NOT NULL
);

create TABLE IF NOT EXISTS Song_Collection (
	id SERIAL PRIMARY KEY,
	song_id INTEGER REFERENCES Song(id),
	collection_id INTEGER REFERENCES Collection(id)
);
